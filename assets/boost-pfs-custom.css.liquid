/* #boost-79618: customize filter scrollbar */
.boost-pfs-filter-has-scrollbar .boost-pfs-filter-option-content-inner::-webkit-scrollbar {
  width: 0.5em;
}
 
.boost-pfs-filter-has-scrollbar .boost-pfs-filter-option-content-inner::-webkit-scrollbar-track {
  box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
}
 
.boost-pfs-filter-has-scrollbar .boost-pfs-filter-option-content-inner::-webkit-scrollbar-thumb {
  background-color: darkgrey;
  outline: 1px solid slategrey;
}

.boost-pfs-filter-has-scrollbar .boost-pfs-filter-option-content-inner {
  scrollbar-color: light;
  scrollbar-width: 0.5em;
  -webkit-overflow-scrolling: touch;
}

/* #boost-79618: Apply All */
@media (max-width: {{ breakpointMobile }}) {
	.boost-pfs-filter-tree {
		 height: 100%;
		 padding-top: 20px;
	}
	 .boost-pfs-filter-tree .boost-pfs-filter-tree-content {
		 height: 100%;
	}
	 .boost-pfs-filter-tree .boost-pfs-filter-options-wrapper {
		 height: calc(100% - 116px);
		 overflow-y: auto;
		 overflow-x: hidden;
	}
	 .boost-pfs-filter-tree .boost-pfs-filter-refine-by-wrapper {
		 display: none;
	}
	 .boost-pfs-filter-mobile-footer {
		 display: block;
		 height: 115px;
		 border-top: 1px solid #d3d3d3;
		 padding-top: 10px;
	}
	 .boost-pfs-filter-mobile-footer .boost-pfs-filter-show-result {
		 display: none;
	}
	 .boost-pfs-filter-mobile-footer .boost-pfs-filter-apply-all-button {
		 display: block;
		 background: #000;
		 color: #fff;
		 text-align: center;
		 font-weight: 400;
		 font-size: 15px;
         width: 55%;
         line-height: 1;       
	}
	 .boost-pfs-filter-mobile-footer .boost-pfs-filter-clear-all {
		 display: block !important;
		 background: transparent;
		 color: #000;
		 text-align: center;
		 font-size: 15px;
		 font-weight: 400;
         width: 40%;
         border: 2px solid #000;
         line-height: 1;
	}
  
    .boost-pfs-filter-mobile-footer {
        position: fixed;
        bottom: 10px;
        width: 100%;
        left: 0;
        padding: 10px 20px;
        display: flex !important;
        flex-direction: row-reverse;
        justify-content: space-between;
        height: 65px !important;
    }  
}

