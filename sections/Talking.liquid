<div class="Talking Container">
  <div class="SectionHeader SectionHeader--center">
  	<h2 class="SectionHeader__Heading Heading u-h1">{{section.settings.title}}</h2>
    <p>{{section.settings.text}}</p>
  </div>
  
  <div class="Grid ArticleListWrapper">
  {% for block in section.blocks limit: section.blocks.size %}
  
  	
      <div class="Grid__Cell 1/0--phone 1/2--tablet 1/3--lap-and-up">
          	<div class="Talking-box">
              {{block.settings.text}}
        	</div>
      </div>
	
  
  {% endfor %}
    </div>
</div>
{% schema %}
{
  "name": "Talking",
  "class":"Section Section--spacingNormal",
  "settings": [
		{
			"type":"text",
			"id":"title",
			"label":"Title"
		},
		{
			"type":"textarea",
			"id":"text",
			"label":"Text"
		}
	],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "text",
      "name": "text",
      "settings": [
        {
			"type":"textarea",
			"id":"text",
			"label":"Add text"
		}
      ]
    }
  ]
}
{% endschema %}
